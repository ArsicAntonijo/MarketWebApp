<h1>Create new receipt</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="createStorageForm">
            <div class="form-group">
                <label class="control-label">Distributer Name:</label>
                <input name="DistributerName" id="DistributerName" class="form-control" required />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Distributer Firm:</label>
                <input name="DistributerFirm" id="DistributerFirm" class="form-control" required/>
                <span class="text-danger"></span>
            </div>
