@{
    var items = ViewBag.Items;
}
<h1>Shopping cart</h1>
<hr />
<table class="table">
    <thead>
        <tr>   
            <th>Item ID</th>
            <th>Name</th>
            <th>Amaunt</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach(var item in items)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>@item.Name</td>
                <td>@item.Amaunt</td>
                <td>
                    <a asp-controller="Item" asp-action="DeleteFromCart" asp-route-id="@item.ItemId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <div class="col-md-4">
        <form method="post" action="OrderConfirmed">      
            <div class="form-group">
                <input type="submit" value="Confirm Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
