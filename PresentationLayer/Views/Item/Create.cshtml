@{
    ViewData["Title"] = "Create";
}
<div class="cntr">
    <h1>Create new Item</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" id="createItemForm">
            <div class="form-group">
                <label class="control-label">Name:</label>
                <input name="Name" class="form-control" required/>
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price:</label>
                <input name="Price" class="form-control" type="number"  step="any" required/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">AmauntAvailable:</label>
                <input name="AmauntAvailable" class="form-control" type="number" step="any" required/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">MeasurementUnit:</label>
                <input name="MeasurementUnit" class="form-control" requiered />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">PricePerUnit:</label>
                <input name="PricePerUnit" class="form-control" type="number"  step="any" required/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Tax:</label>
                <input name="Tax" class="form-control" type="number"  step="any" required/>
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">PriceWithTax:</label>
                <input name="PriceWithTax" class="form-control" type="number"  step="any" required/>
                <span  class="text-danger"></span>
            </div>
            <br />
            <div class="form-group cntr">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
<br />
<div class="cntr">
    <a asp-controller="Item" asp-action="Index">Back to List</a>
</div>

<script src="~/js/ItemStaff.js" asp-append-version="true"></script>
